<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_centerInParent="true">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_insert_photo_24">


        </ImageView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Jony Vernel"
            >


        </TextView>

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@id/userName"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:text="\@JonyBoyMan">


        </TextView>


        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/загруженное2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"

            android:scaleType="centerCrop"
            android:layout_below="@+id/image">


        </ImageView>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_heart_broken_24"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/image2"
            android:scaleType="centerCrop">


        </ImageView>


        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image3"
            android:layout_below="@+id/image2"
            android:textSize="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="7dp"
            android:text="5"
            />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_3p_24"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/likeCount"
            android:layout_centerVertical="true"
            android:layout_below="@+id/image2"
            android:scaleType="centerCrop">


        </ImageView>


        <TextView
            android:id="@+id/coment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image4"
            android:layout_below="@+id/image2"
            android:textSize="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="24"
            />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_bookmark_border_24"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image6"
            android:layout_centerVertical="true"
            android:layout_below="@+id/image2"
            android:scaleType="centerCrop">


        </ImageView>

        <ImageView
            android:id="@+id/image6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_screen_share_24"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="135dp"
            android:layout_toRightOf="@+id/coment"
            android:layout_centerVertical="true"
            android:layout_below="@+id/image2"
            android:scaleType="centerCrop">


        </ImageView>

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/image4"
            android:textSize="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="Date publish:"
            />

        <TextView
            android:id="@+id/data2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/data"
            android:layout_below="@+id/image4"
            android:textSize="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="31.10.2023"

            />


    </RelativeLayout>


    </androidx.cardview.widget.CardView>





    

</RelativeLayout>